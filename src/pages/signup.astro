---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.vue';
import Footer from '../components/Footer.vue';
import SignupForm from '../components/SignupForm.vue';
---

<Layout title="Kriyagni AI - Signup">
  <Header client:load />
  <main class="flex items-center justify-center min-h-screen bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full">
      <SignupForm client:load />
      <div class="text-center text-sm mt-4">
        Already have an account? <a href="/login" class="font-medium text-indigo-600 hover:text-indigo-500">Sign in</a>
      </div>
    </div>
  </main>
  <Footer client:load />
</Layout>
