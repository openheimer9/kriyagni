---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.vue';
import Footer from '../components/Footer.vue';
import BlogGrid from '../components/BlogGrid.vue';
---

<Layout title="Kriyagni AI Blog">
  <Header client:load />
  <main>
    <section class="py-16 md:py-24 text-center bg-white">
      <div class="container mx-auto px-4">
        <h1 class="text-4xl md:text-6xl font-bold leading-tight mb-4">AI Insights & Knowledge Hub</h1>
        <p class="text-xl md:text-2xl text-gray-600 max-w-3xl mx-auto">Expert insights on AI solutions, prompt engineering, and business transformation.</p>
      </div>
    </section>
    <BlogGrid client:load />
  </main>
  <Footer client:load />
</Layout>
